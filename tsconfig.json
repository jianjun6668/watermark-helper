{
  "compilerOptions": {
    "declaration": true, // 启用声明文件生成
    "declarationDir": "./types", // 声明文件输出目录
    "outDir": "./dist", // 输出目录
    "module": "ES6", // 使用的模块系统
    "target": "ES5", // ECMAScript 目标版本
    "lib": ["ES2015", "DOM"], // 使用的库
    "rootDir": "./src", // 源文件的根目录
    "strict": true, // 启用所有严格类型检查选项
    "esModuleInterop": true, // 启用对 ECMAScript 模块的兼容
    "skipLibCheck": true, // 跳过对库文件的类型检查
  },
  "include": ["src/*.ts"], // 包含的文件
  "exclude": ["nodeß_modules", "dist"], // 排除的文件夹
}
